<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/img_login_logo"
        android:transitionName="login_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="50dp"
        android:layout_margin="120dp"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:src="@drawable/img_logo_bus"/>

    <TextView
        android:id="@+id/tv_name_logo"
        android:transitionName="login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="校车预约"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/img_login_logo"
        android:gravity="center"
        android:textSize="46sp"
        android:textColor="@color/black"
        android:fontFamily="@font/font_youshe_title"/>

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="created by 2021.12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_logo"
        android:gravity="center"
        android:textSize="12sp" />


</androidx.constraintlayout.widget.ConstraintLayout>